<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/idNome"
            android:layout_width="234dp"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:text="TextView"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/idEditar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/id_rua"
            android:layout_width="229dp"
            android:layout_height="22dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:text="TextView"
            app:layout_constraintEnd_toStartOf="@+id/idEditar"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idNome" />

        <Button
            android:id="@+id/idEditar"
            android:layout_width="107dp"
            android:layout_height="38dp"
            android:text="@string/editar"
            tools:layout_editor_absoluteX="303dp"
            tools:layout_editor_absoluteY="-2dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/remover"
            android:layout_width="107dp"
            android:layout_height="38dp"
            android:onClick="@string/deletar"
            android:text="@string/deletar"
            tools:layout_editor_absoluteX="303dp"
            tools:layout_editor_absoluteY="36dp"
            tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>